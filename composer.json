{
  "name": "nickwelsh/cull",
  "description": "Quickly purge vendor and node_modules directories from your projects",
  "type": "library",
  "bin": [
    "bin/cull"
  ],
  "require": {
    "php": "^8.1",
    "laravel/prompts": "^0.3.6",
    "symfony/process": "^6.4 || ^7.0"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "NickWelsh\\Cull\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "NickWelsh\\Cull\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "analyse": "XDEBUG_MODE=off vendor/bin/phpstan analyse",
    "format": "vendor/bin/pint",
    "rector": "vendor/bin/rector",
    "spelling": "vendor/bin/peck",
    "test": "vendor/bin/pest --parallel",
    "test-coverage": "XDEBUG_MODE=coverage vendor/bin/pest --parallel --coverage"
  },
  "authors": [
    {
      "name": "Nick Welsh",
      "email": "nickwelsh@users.noreply.github.com"
    }
  ],
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "require-dev": {
    "larastan/larastan": "^3.7",
    "laravel/pint": "^1.25",
    "peckphp/peck": "^0.1.3",
    "rector/rector": "^2.1"
  }
}
